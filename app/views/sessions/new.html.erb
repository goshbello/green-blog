<h1 class="text-center mb-4">Log in</h1>

<div class="container">
 
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-4 bg-body rounded form-custom",local: true) do |f| %>

        <div class="form-group row">
          <%= f.label :Email, class:"col-2 col-form-label fs-3" %>
          <div class="col-10">
          <%= f.text_field :email, class: "form-control shadow rounded fs-3", placeholder: "Enter your email address"  %>
          </div>
        </div>

        <div class="form-group row">
        <%= f.label :Password, class:"col-2 col-form-label fs-3" %>
        <div class="col-10">
        <%= f.password_field :password, class: "form-control shadow rounded fs-3 mt-4", placeholder: "Enter your password"  %>
        </div>
      </div>

        <div class="form-group row justify-content-center mt-5">
          <%= f.submit "Login in", class:"btn btn-outline-success btn-lg form-btn-custom fs-3" %>
        </div>

      <% end %>
      </div>
    <%= link_to '[ Cancel and return to article listing ]', articles_path, class:"text-info text-center" %>
  </div>
</div>
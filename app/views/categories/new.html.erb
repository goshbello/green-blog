<h1 class="text-center mb-4">Create a new category</h1>

<div class="container">
 
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-4 bg-body rounded form-custom",local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category name", class:"col-2 col-form-label fs-3"%>
          <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded fs-3 mb-3", placeholder: "Enter a category" %>
          </div>
        </div>

        <div class="form-group row justify-content-center mt-5">
          <%= f.submit class:"btn btn-outline-success btn-lg form-btn-custom fs-3" %>
        </div>

      <% end %>
      </div>
    <%= link_to '[ Cancel and return to article listing ]', articles_path, class:"text-info text-center" %>
  </div>
</div>

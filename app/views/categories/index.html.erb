<h1 class="text-center mb-4">Listing all categories</h1>

<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>

<% @categories.each do |category| %>
  <div class="row justify-content-md-center">
  <div class="col-4 mt-4">
  <div class="card text-center shadow mb-5 bg-body rounded">
    
    <div class="card-body">
      <h5 class="card-title fs-2"><%= link_to category.name, category_path(category), class:"text-success text text-decoration-none " %></h5>
      <p class="card-text fs-3"><%= pluralize(category.articles.count, "article") %></p>
    </div>
    <div class="card-footer text-muted custom-card-style">
    <small>Created <%= time_ago_in_words(category.created_at) %> ago, 
      edited <%= time_ago_in_words(category.updated_at) %> ago </small>
    </div>
    </div>
    </div>
  </div>
<% end %>


<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>

<h1>Edit article</h1>

<% if @article.errors.any? %>
  <h2>The following errors prevented article from being saved</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with(model: @article, local: true) do |f| %> <!--retain the article information in the form of the article to updated-->

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <br>

  <div>
    <%= f.label :Description %><br>
    <%= f.text_area :description %>
  </div>

  <br>

  <div>
    <%= f.submit %><br>
  
  </div>

<% end %>
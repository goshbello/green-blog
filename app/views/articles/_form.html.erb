<div class="container">
 
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-4 bg-body rounded form-custom",local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class:"col-2 col-form-label fs-3"%>
          <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow rounded fs-3 mb-3", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :Description, class:"col-2 col-form-label fs-3" %>
          <div class="col-10">
          <%= f.text_area :description, rows: 10, class: "form-control shadow rounded fs-3", placeholder: "Description of article"  %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :categories, class:"col-2 col-form-label fs-3" %>
          <div class="col-10">
          <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Make your selection from the list below (Can be empty)"}, {multiple: true, size: 4, class: "form-select fs-3 shadow rounded mt-3"}) %>
          </div>
      </div>

        <div class="form-group row justify-content-center mt-5">
          <%= f.submit class:"btn btn-outline-success btn-lg form-btn-custom fs-3 shadow rounded"%>
        </div>

      <% end %>
      </div>
    <%= link_to '[ Cancel and return to article listing ]', articles_path, class:"text-info text-center" %>
  </div>
</div>
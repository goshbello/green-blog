<h1>Display all article</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan=3>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'show', article_path(article.id) %></td>
      <td><%= link_to 'Edit', edit_article_path(article.id) %></td>
      <td><%= link_to 'Delete', article_path(article.id), method: :delete, data: {confirm: "Are you sure?"} %></td> <!-- need the id of the article to be deleted -->
    </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to 'Create new article', new_article_path%>
</div>